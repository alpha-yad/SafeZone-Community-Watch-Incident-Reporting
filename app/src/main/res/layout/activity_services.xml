<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICES"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#1C2526">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/requestServiceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REQUEST A SERVICE"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:padding="16dp"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request a new service from available providers"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/viewServicesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW AVAILABLE SERVICES"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:padding="16dp"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse through all available services"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/myServicesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MY SERVICES"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800"
                android:padding="16dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View and manage your service requests"
                android:textColor="#B0B0B0"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout> 